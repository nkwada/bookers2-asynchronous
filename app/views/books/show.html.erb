
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform' %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>

				<!-- いいね機能 -->
				<% if @book.favorited_by?(current_user) %>
				  <td>
				    <%= link_to book_favorites_path(@book), method: :delete do %>
				      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
				      <%= @book.favorites.count %> いいね
				    <% end %>
				  </td>
				<% else %>
				  <td>
				    <%= link_to book_favorites_path(@book), method: :post do %>
				      <i class="fa fa-heart-o" aria-hidden="true"></i>
				      <%= @book.favorites.count %> いいね
				    <% end %>
				  </td>
				<% end %>
				<!-- ここまで -->

				<td><%= @book.book_comments.count %>件コメント</td>

			<% if @book.user == current_user %>
				<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
			<% end %>
			</tr>
		</table>

		<!-- コメント機能 -->
		<% @book.book_comments.each do |book_comment| %>
		    <div class="row">
			    <table class="table">
			    	<tr>
			    		<td><%= book_comment.user.name %></td>
			    		<td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
			    		<td><%= book_comment.comment %></td>
			    	<% if book_comment.user == current_user %>
			    		<td><%= link_to "Destroy",book_book_comments_path(book_comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
			    	<% else %>
			    		<td>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;</td>
			    	<% end %>
			    	</tr>
			    </table>
			</div>
		<% end %>
		<!-- ここまで -->

		<!-- コメント入力フォーム -->
			<%= form_for [@book, @book_comment] do |f| %>
				<div class="row">
				    <div class="col-sm-12">
				        <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				    </div>
				</div>
				<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			<% end %>

		<!-- ここまで -->
	</div>
</div>

