<h2>Follow Users</h2>
    <!--follow user一覧 -->
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name%></td>
            <td><%= user.following.count %>　following</td>
            <td><%= user.followers.count %>  followers</td>
            <td><%= render 'follow_form', user: user  %></td>
            <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <!--follow user一覧 -->